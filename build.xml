<project name="PDDL4J" default="dist" basedir=".">
  <description>
      Build file for PDDL-Parser
  </description>

  <!-- Set global properties for this build -->
  <!--property environment="env"/>
  <property name="antlr_lib_location" location="${env.HOME}/libraries/jar/"/-->
  <property name="antlr_lib_location" location="libs/jar/"/>

  <!-- Location for build files -->
  <property name="build" location="build"/>
  <!-- Location for files generated by antlr -->
  <property name="antlr_gen" location="build/antlr"/>

  <path id="project.class.path">
    <fileset dir="${antlr_lib_location}" includes="**/*.jar"/>
  </path>

  <target name="init">
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>


  <target name="antlr" depends="init"
          description="Generate the ANTLR code from the grammar file">
    <!-- Compile the java code from ${src} into ${build} -->
    <java classname="org.antlr.Tool"
          classpathref="project.class.path"
          fork="true">
      <arg value="-o"/>
      <arg value="${antlr_gen}"/>
      <arg value="Pddl.g"/>
    </java>
  </target>

  <target name="compile" depends="init" 
        description="Compile the source">
    <!-- Compile the java code into ${build} -->
    <javac
      classpathref="project.class.path"
	    srcdir="./"
      destdir="${build}"
	    debug="true" debuglevel="lines,vars,source">
	<!--<compilerarg value="-Xlint:unchecked"/>-->
    </javac>
  </target>

  <target name="dist" depends="compile"
        description="Generate the distribution" >
    <!-- Put everything in ${build} into the jar file -->
    <jar jarfile="${build}/PDDL4J.jar" basedir="${build}"/>
  </target>

  <target name="clean"
        description="Clean up" >
    <!-- Delete the ${build} directory trees -->
    <delete dir="${build}"/>
    <delete file="${build}/PDDL4J.jar"/>
  </target>
</project>
